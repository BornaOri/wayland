{
    "layer": "top",
    "position": "top",
    "height": 40,
    "spacing": 0,
    "margin-top": 8,
    "margin-left": 16,
    "margin-right": 16,
    
    "modules-left": [
        "custom/launcher-terminal",
        "custom/launcher-vscode", 
        "custom/launcher-spotify",
        "custom/launcher-firefox"
    ],
    
    "modules-center": [
        "clock"
    ],
    
    "modules-right": [
        "pulseaudio",
        "custom/microphone",
        "network",
        "battery",
        "cpu",
        "memory"
    ],

    // Left Section - Application Launchers
    "custom/launcher-terminal": {
        "format": "󰆍",
        "tooltip-format": "Terminal (Alacritty)",
        "on-click": "alacritty"
    },
    
    "custom/launcher-vscode": {
        "format": "󰨞",
        "tooltip-format": "VS Code",
        "on-click": "code"
    },
    
    "custom/launcher-spotify": {
        "format": "󰓇",
        "tooltip-format": "Spotify",
        "on-click": "spotify"
    },
    
    "custom/launcher-firefox": {
        "format": "󰈹",
        "tooltip-format": "Firefox",
        "on-click": "firefox"
    },

    // Center Section - Clock
    "clock": {
        "timezone": "Europe/London",
        "format": "{:%d/%m/%Y  %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#c9a96e'><b>{}</b></span>",
                "days": "<span color='#d4be98'><b>{}</b></span>",
                "weeks": "<span color='#a89984'><b>W{}</b></span>",
                "weekdays": "<span color='#ebdbb2'><b>{}</b></span>",
                "today": "<span color='#fabd2f'><b><u>{}</u></b></span>"
            }
        }
    },

    // Right Section - System Info
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "󰝟 {volume}%",
        "format-icons": {
            "headphone": "󰋋",
            "hands-free": "󰋎",
            "headset": "󰋎",
            "phone": "󰄜",
            "portable": "󰄜",
            "car": "󰄋",
            "default": ["󰕿", "󰖀", "󰕾"]
        },
        "scroll-step": 5,
        "on-click": "pavucontrol",
        "tooltip-format": "Volume: {volume}%\nClick to open PulseAudio control"
    },
    
    "custom/microphone": {
        "exec": "~/Scripts/mic-status.sh",
        "return-type": "json",
        "interval": 1,
        "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
        "tooltip-format": "Microphone: {tooltip}"
    },
    
    "network": {
        "interface": "wl*",
        "format-wifi": "󰤨 {signalStrength}%",
        "format-ethernet": "󰈀 Connected",
        "format-linked": "󰈀 {ifname} (No IP)",
        "format-disconnected": "󰤭 Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "Network: {essid}\nSignal: {signalStrength}%\nIP: {ipaddr}",
        "on-click-right": "nm-connection-editor"
    },
    
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "󰂄 {capacity}%",
        "format-plugged": "󰂄 {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": [
            "󰂎",
            "󰁺",
            "󰁻",
            "󰁼",
            "󰁽",
            "󰁾",
            "󰁿",
            "󰂀",
            "󰂁",
            "󰂂",
            "󰁹"
        ],
        "tooltip-format": "Battery: {capacity}%\n{timeTo}"
    },
    
    "cpu": {
        "format": "󰻠 {usage}%",
        "tooltip-format": "CPU Usage: {usage}%\nLoad: {load}",
        "interval": 2,
        "on-click": "alacritty -e htop"
    },
    
    "memory": {
        "format": "󰍛 {percentage}%",
        "tooltip-format": "Memory: {used:0.1f}G / {total:0.1f}G ({percentage}%)\nAvailable: {avail:0.1f}G",
        "interval": 2,
        "on-click": "alacritty -e htop"
    }
}